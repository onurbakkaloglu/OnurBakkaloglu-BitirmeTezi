@page "/admin/addblog/{id:long}"
<h3 class="bg-info text-white text-center p-1">Details</h3>

<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>ID</th><td>@Blog.Id</td></tr>
        <tr><th>Name</th><td>@Blog.BlogTitle</td></tr>
        <tr><th>Description</th><td>@Blog.BlogContent</td></tr>
        <tr><th>Category</th><td>@Blog.BlogStatus</td></tr>
    </tbody>
</table>

<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/products">Back</NavLink>

